<?xml version="1.0" encoding="UTF-8"?>
<included>
	<appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
		<discardingThreshold>0</discardingThreshold>
		<queueSize>2048</queueSize>
		<appender-ref ref="FILE"/>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/application.log</file>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [%X{requestId:-system}] %X{method:-} %X{uri:-} %X{clientIp:-} %X{status:-} %X{duration:-} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>logs/backup/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<maxFileSize>200MB</maxFileSize>
			<maxHistory>90</maxHistory>
			<totalSizeCap>20GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
		<discardingThreshold>0</discardingThreshold>
		<queueSize>512</queueSize>
		<appender-ref ref="ERROR_FILE"/>
	</appender>

	<appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/error.log</file>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - [%X{requestId:-system}] %X{method:-} %X{uri:-} %X{clientIp:-} %X{error:-} - %msg%n%ex</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>logs/backup/error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<maxFileSize>100MB</maxFileSize>
			<maxHistory>90</maxHistory>
			<totalSizeCap>5GB</totalSizeCap>
		</rollingPolicy>
	</appender>

	<logger name="com" level="INFO" additivity="false">
		<appender-ref ref="ASYNC_FILE"/>
		<appender-ref ref="ASYNC_ERROR"/>
	</logger>

	<logger name="org.springframework" level="WARN"/>
	<logger name="org.hibernate" level="WARN"/>
	<logger name="org.apache" level="WARN"/>
	<logger name="com.zaxxer.hikari" level="WARN"/>

	<root level="WARN">
		<appender-ref ref="ASYNC_FILE"/>
		<appender-ref ref="ASYNC_ERROR"/>
	</root>
</included>
